@page
@model ServerApp.Pages.Register
@{
    ViewData["Title"] = "Player Registration";
}

<div class="max-w-lg mx-auto bg-white/90 rounded-2xl shadow-xl mt-12 p-8">
    <h2 class="text-3xl font-bold text-indigo-700 mb-6 text-center">Player Registration</h2>

    <form method="post" class="space-y-7">
        <!-- Validation summary (general errors) -->
        <div asp-validation-summary="All" class="bg-red-50 text-red-700 border border-red-200 rounded-xl px-4 py-2 mb-2 text-center text-sm font-semibold"></div>

        <div>
            <label asp-for="Player.FirstName" class="block mb-2 text-sm font-medium text-gray-700">First Name</label>
            <input asp-for="Player.FirstName"
                   class="block w-full rounded-xl border border-gray-300 bg-gray-50 px-4 py-3 text-lg shadow-sm focus:ring-2 focus:ring-indigo-400 focus:border-indigo-500 outline-none transition"
                   placeholder="Enter your first name" />
            <span asp-validation-for="Player.FirstName" class="text-xs text-red-600 mt-1 block"></span>
        </div>

        <div>
            <label asp-for="Player.Id" class="block mb-2 text-sm font-medium text-gray-700">Player ID</label>
            <input asp-for="Player.Id" type="number" min="1" max="1000"
                   class="block w-full rounded-xl border border-gray-300 bg-gray-50 px-4 py-3 text-lg shadow-sm focus:ring-2 focus:ring-indigo-400 focus:border-indigo-500 outline-none transition"
                   placeholder="Choose an ID (1–1000)" />
            <span asp-validation-for="Player.Id" class="text-xs text-red-600 mt-1 block"></span>
        </div>

        <div>
            <label asp-for="Player.Phone" class="block mb-2 text-sm font-medium text-gray-700">Phone</label>
            <input asp-for="Player.Phone"
                   class="block w-full rounded-xl border border-gray-300 bg-gray-50 px-4 py-3 text-lg shadow-sm focus:ring-2 focus:ring-indigo-400 focus:border-indigo-500 outline-none transition"
                   placeholder="Enter your phone number" />
            <span asp-validation-for="Player.Phone" class="text-xs text-red-600 mt-1 block"></span>
        </div>

        <div>
            <label asp-for="Player.Country" class="block mb-2 text-sm font-medium text-gray-700">Country</label>
            <select asp-for="Player.Country" asp-items="new SelectList(Model.Countries)"
                    class="block w-full rounded-xl border border-gray-300 bg-gray-50 px-4 py-3 text-lg shadow-sm focus:ring-2 focus:ring-indigo-400 focus:border-indigo-500 outline-none transition">
            </select>
            <span asp-validation-for="Player.Country" class="text-xs text-red-600 mt-1 block"></span>
        </div>

        <button type="submit"
                class="w-full py-3 rounded-xl bg-indigo-600 hover:bg-indigo-700 text-white text-lg font-semibold shadow-md transition">
            Register
        </button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
