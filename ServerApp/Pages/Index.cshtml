@page
@model IndexModel

@{
    ViewData["Title"] = "Home";
}

<div class="max-w-3xl mx-auto mt-14 mb-16 bg-white/90 rounded-3xl shadow-xl px-8 py-10 text-center">
    <h1 class="text-5xl font-extrabold text-indigo-700 mb-4 tracking-tight">Connect Four</h1>
    <p class="text-lg text-gray-600 mb-8">
        Welcome to Connect Four — a classic connection game built with <span class="font-medium text-indigo-600">ASP.NET Core Razor Pages</span> and a <span class="font-medium text-indigo-600">WinForms client</span>.
    </p>

    <div class="mx-auto mb-8 rounded-2xl overflow-hidden shadow-md w-full" style="max-width: 600px;">
        <div class="aspect-w-16 aspect-h-9 bg-indigo-50 flex items-center justify-center">
            <img src="~/images/board-screenshot.jpg"
                 alt="Connect Four Board Screenshot"
                 class="object-cover w-full h-full" />
        </div>
    </div>

    <div class="mt-8">
        <h2 class="text-xl font-bold text-indigo-700 mb-4">Getting Started</h2>
        <ul class="list-disc list-inside text-left mx-auto text-gray-800 space-y-2" style="max-width: 400px;">
            <li><span class="font-semibold">Register</span> a new player account.</li>
            <li><span class="font-semibold">Log in</span> with your ID and phone.</li>
            <li>Create a <span class="font-semibold">game</span> and start dropping discs.</li>
        </ul>
    </div>
</div>
