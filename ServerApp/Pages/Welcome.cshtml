@page "{id:int}"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@model ServerApp.Pages.WelcomeModel
@{
    ViewData["Title"] = "Welcome";
}

<div class="max-w-lg mx-auto bg-white/90 rounded-2xl shadow-xl mt-12 p-8 text-center">
    <h2 class="text-3xl font-bold text-indigo-700 mb-2">Welcome, Player @Model.Id!</h2>
    <p class="text-gray-600 mb-8 text-lg">What would you like to do?</p>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="mb-4 bg-red-50 text-red-700 border border-red-200 rounded-xl px-4 py-2 text-center text-sm font-semibold">
            @foreach (var err in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                @err.ErrorMessage
        
                <br />
            }
        </div>
    }

    <form method="post" class="space-y-4">
        <button type="submit" asp-page-handler="Play"
                class="w-full py-3 rounded-xl bg-indigo-600 hover:bg-indigo-700 text-white text-lg font-semibold shadow-md transition flex items-center justify-center gap-2">
            <span>Play</span> <span aria-hidden="true">🎮</span>
        </button>
        <button type="submit" asp-page-handler="Logout"
                class="w-full py-3 rounded-xl bg-red-500 hover:bg-red-600 text-white text-lg font-semibold shadow-md transition flex items-center justify-center gap-2">
            <span>Logout</span> <span aria-hidden="true">🚪</span>
        </button>
    </form>
</div>
