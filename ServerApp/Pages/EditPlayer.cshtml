@page "{id:int}"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@model ServerApp.Pages.EditPlayerModel
@{
    ViewData["Title"] = "Edit Player";
}

<div class="max-w-md mx-auto mt-12 mb-16 px-4">
    <h2 class="text-3xl font-bold text-indigo-700 mb-4">Edit Player Details</h2>

    <form method="post" class="space-y-4">
        <div asp-validation-summary="All" class="text-red-600"></div>
        <input type="hidden" asp-for="Player.Id" />

        <div>
            <label asp-for="Player.FirstName" class="block text-gray-700">Name</label>
            <input asp-for="Player.FirstName" class="w-full px-3 py-2 border rounded" />
            <span asp-validation-for="Player.FirstName" class="text-red-500"></span>
        </div>

        <div>
            <label asp-for="Player.Phone" class="block text-gray-700">Phone</label>
            <input asp-for="Player.Phone" class="w-full px-3 py-2 border rounded" />
            <span asp-validation-for="Player.Phone" class="text-red-500"></span>
        </div>

        <div>
            <label asp-for="Player.Country" class="block text-gray-700">Country</label>
            <input asp-for="Player.Country" class="w-full px-3 py-2 border rounded" />
            <span asp-validation-for="Player.Country" class="text-red-500"></span>
        </div>

        <div class="flex items-center justify-between">
            <button type="submit" 
                    asp-page-handler="Save"
                    class="px-4 py-2 bg-indigo-600 text-white rounded hover:bg-indigo-700">
                Save Changes
            </button>
            <button type="submit"
                     asp-page-handler="Delete"
                     class="px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700"
                     onclick="return confirm('Really delete this player and all their games?');">
                Delete Player
            </button>
            <a asp-page="/ShowPlayersBy" class="ml-4 text-indigo-600 hover:underline">Cancel</a>
        </div>
    </form>
</div>